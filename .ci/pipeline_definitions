  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
      publish:
        dockerimages:
          cloud-provider-azure:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/kubernetes/cloud-provider-azure'
            dockerfile: 'Dockerfile'
            target: cloud-provider-azure
    steps: ~
  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        component_descriptor: ~
        publish:
          dockerimages:
            cloud-provider-azure:
              tag_as_latest: true
